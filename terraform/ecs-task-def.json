{
  "containerDefinitions": [
    {
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `IMAGE_TAG` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/app",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "app"
        }
      },
      "name": "app-container",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 8080,
          "hostPort": 8080,
          "name": "app-8080-tcp",
          "protocol": "tcp"
        }
      ]
    }
  ],
  "cpu": "256",
    "executionRoleArn": "{{or (env `EXECUTION_ROLE_ARN` ``) (tfstate `module.ecs_task_execution_role.aws_iam_role.default.arn`)}}",
  "family": "app",
  "ipcMode": "",
  "memory": "512",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ]
}
